<!--
<h2>Dashboard</h2>


Num Results: <%#= @my_restrooms.length %>
   
-->

               
<% @my_restrooms.each_with_index do |restroom, index| %>
    <div class="location" data-latitude="<%=restroom.latitude %>" data-longitude="<%= restroom.longitude %>" data-name ='<%= restroom.name %>' data-location='<%= restroom.location %>' data-borough='<%= restroom.borough %>' data-open='<%= restroom.open_year_round %>' data-user='<%= restroom.user_id %>'></div>
<% end %>

  


  <div class="col-6 info">
     
      <strong>Name: </strong><p class = 'bathroom_name'> </p>
      <strong>Location:  </strong><p class = 'bathroom_location'></p>
      <strong>Borough: </strong><p class = 'bathroom_borough'></p>
      <strong>Open Year Round: </strong><p class = 'bathroom_open'></p>
       <strong>User: </strong><p class = 'bathroom_user'></p>
        <div>
            <strong>Mode of Travel: </strong>
            <select id="mode">
                <option value="DRIVING">Driving</option>
                <option value="WALKING">Walking</option>
                <option value="BICYCLING">Bicycling</option>
                <option value="TRANSIT">Transit</option>
            </select>
        </div>    
   
</div> 
  
<div id="directionsPanel" style="width:60%;height 100%"></div>   
<div>
   <div class="avr-rating">
       <strong>Borough: </strong>
   </div>
    <ul class="rate-area">

        <input type="radio" id="5-star" name="rating" value="5" /><label for="5-star" title="Amazing">5 stars</label>
        <input type="radio" id="4-star" name="rating" value="4" /><label for="4-star" title="Good">4 stars</label>
        <input type="radio" id="3-star" name="rating" value="3" /><label for="3-star" title="Average">3 stars</label>
        <input type="radio" id="2-star" name="rating" value="2" /><label for="2-star" title="Not Good">2 stars</label>
        <input type="radio" id="1-star" name="rating" value="1" /><label for="1-star" title="Bad">1 star</label>

    </ul>
</div>  
   
    
    
