<!DOCTYPE html>
<html>
    <head>
        <title>FindPublicRestroom</title>
        <%= csrf_meta_tags %>
        <%= csp_meta_tag %>

        <%= stylesheet_link_tag    'application', media: 'all' %>
        <%= javascript_include_tag 'application' %>
    </head>

    <body>
        <div id="map_wrapper">
            <div id="map_canvas" class="mapping"></div>
        </div> 
<!--    change this to nav menu if user is signed in!!!!!!    -->
        <% if user_signed_in? %>   
           <div class="sidenav">
                        <%= link_to 'Home', dashboard_path, class: 'nav-link' %> <span class="sr-only">(current)</span>
                        <%= link_to 'About', dashboard_path, class: 'nav-link' %>
                        <%= link_to 'Add a Bathroom', new_bathroom_location_path, class: 'nav-link' %>
                        <%= link_to 'Log Out', destroy_user_session_path, method: 'DELETE', class: 'logout' %>
                       
                    </div>
       
        <% end %>

       <div class="container">
            <% if notice %>
                <p class="alert alert-success"><%= notice %></p>
            <% end %>
            <% if alert %>
                <p class="alert alert-danger"><%= alert %></p>
            <% end %>

            <%= yield %>
        </div>

    </body>
</html>
