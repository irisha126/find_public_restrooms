<!DOCTYPE html>
<html>
    <head>
        <title>FindPublicRestroom</title>
        <%= csrf_meta_tags %>
        <%= csp_meta_tag %>

        <%= stylesheet_link_tag    'application', media: 'all' %>
        <%= javascript_include_tag 'application' %>
    </head>

    <body class="<%= controller_name %> <%= action_name %>">
     
           

            <nav class="navbar navbar-expand-lg ">
                <a class="navbar-brand" href="/"><span class='logo'>Gottago</span></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                   
                   <% if user_signed_in? %>
                    <div class="navbar-nav">
                        <%= link_to 'Home', dashboard_path, class: 'nav-item nav-link active' %> <span class="sr-only">(current)</span>
                        <%= link_to 'Add review', dashboard_path, class: 'nav-item nav-link' %>
                        <%= link_to 'Add a Bathroom', new_bathroom_location_path, class: 'nav-item nav-link' %>
                        <%= link_to 'Log Out', destroy_user_session_path, method: 'DELETE', class: 'logout nav-item nav-link' %>

                    </div>
                    <% else %>
                    
                     <div class="navbar-nav">
                        <h4 class='msg'><em>To add a bathroom or leave a review, please</em></h4>
                        <%= link_to "Log In", new_user_session_path, class: 'btn btn-outline-info nav-btn' %>
                        <%= link_to "Sign Up", new_user_registration_path, class: 'btn btn-outline-info nav-btn' %>

                    </div>
                    
                    <% end %>
                </div>
            </nav>

       
        

        <div class="container">
            <div class="row">
                <div class="col-6">
                   
                    <div id="map_wrapper">
                    <div id="map_canvas" class="mapping"></div>
                    </div> 
                </div>
                <div class="col-6">
       
                    <% #if notice %>
<!--
                        <p class="alert alert-success"><%#= notice %></p>
                    <%# end %>
                    <%# if alert %>
                        <p class="alert alert-danger"><%#= alert %></p>
                    <%# end %>
-->
                   
                    <%= yield %>
                </div>
            </div>
        </div>

    </body>
       <footer>
            &copy; 2018 Minimal Website&nbsp;<span class="separator">|</span> Design by <a id="myName" href="http://www.irynamanu.com">Iryna Manu</a>
        </footer>
</html>
